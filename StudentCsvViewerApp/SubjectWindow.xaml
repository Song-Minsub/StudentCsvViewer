<Window x:Class="StudentCsvViewer.SubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentCsvViewer"
        mc:Ignorable="d"
        Title="SubjectWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" TextWrapping="Wrap"
                     x:Name="Tb_Subject" Width="Auto" FontSize="25"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" TextWrapping="Wrap" 
                     x:Name="Tb_Desc" Width="700" FontSize="20"/>
            </StackPanel>
            <Image  HorizontalAlignment="Center" VerticalAlignment="Center"  Height="Auto"
                    x:Name ="Tb_Photo" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
